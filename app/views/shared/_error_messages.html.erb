<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(resource.errors.count, "error") %>.
    </div>
    <ul>
      <% resource.errors.each do |msg| %>
        <li class='text-danger'><%= msg.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>