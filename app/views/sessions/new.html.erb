<h1 class="text-center mt-3">Log in</h1>

<div class="col-md-4 offset-md-4">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= render "shared/flash" %>

    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :email, t('authenticate.email') %>
          <%= f.email_field :email, value: hold_email, placeholder: 'my@mail.com', class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, t('activerecord.attributes.user.password') %>
          <%= f.password_field :password, placeholder: 'Minimum length is 6 characters', class: "form-control" %>
        </div>

        <div class="mb-3">
          <p><%= link_to t('authenticate.forgot_password'), new_password_reset_path %></p>

          <div class="form-check">
            <%= f.check_box :remember_me, value: 1, class: 'form-check-input' %>
            <%= f.label :remember_me, t('authenticate.remember_me'), class: 'form-check-label' %>
          </div>
        </div>

        <%= f.submit t('authenticate.log_in'), class: "mt-2 btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>