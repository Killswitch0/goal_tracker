<div class="col-sm-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4 mt-5">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= render "shared/flash" %>

    <div class="card">
      <div class="card-body">
        <div class="table-header">
          <h2 class="text-center">
            <%= t('authenticate.login') %>
          </h2>
        </div>

        <div class="mb-3">
          <%= f.label :email, t('authenticate.email') %>
          <%= f.email_field :email, value: hold_email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, t('activerecord.attributes.user.password') %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3 d-flex justify-content-between">
          <div class="form-check">
            <%= f.check_box :remember_me, value: 1, class: 'form-check-input' %>
            <%= f.label :remember_me, t('authenticate.remember_me'), class: 'form-check-label' %>
          </div>

          <p><%= link_to t('authenticate.forgot_password'), new_password_reset_path %></p>
        </div>

        <%= f.submit t('authenticate.log_in'), class: "mt-2 btn btn-primary action" %>
      </div>
    </div>
  <% end %>

</div>