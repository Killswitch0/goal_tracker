<div class="large-table-board mt-3" id="goal-tracking_show">
  <div class="table-header list"> 
    <h2 class="text-center title">
      <%= t('goals_tracker').upcase %>
    </h2>

    <div class="table-header__info">
      <div class="vr"></div>
      <%= goals_completed(@goals) %>
    </div>
  </div>

  <% if @goals.empty? %>
    <%= render 'shared/empty', title: t('partials.empty.tracking.title'),
                               message: t('partials.empty.tracking.goal_message'),
                               svg: true,
                               svg_path: 'icons/material/table_chart_view' %>
  <% else %>
    <div class="large-table-board__body">
      <div class="buttons-list evenly">
        <div class="text-center my-3">
          <%= link_to t('switch_to_tasks'), task_tracking_path, class: 'btn btn-sm btn-primary' %>
        </div>

        <%= render 'layouts/search', path: goal_tracking_path %> 
      </div>

      <div class="tracking-wrapper table-body">
        <%= render 'goal_tracking/table', items: @goals %>
      </div>
    </div>
  <% end %>
</div>

