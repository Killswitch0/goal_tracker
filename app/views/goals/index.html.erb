<h1 class="text-center">My Goals (<%= goals_complete(@goals) %> are completed)</h1>
<hr>

<div class="text-center">
  <%= form_with url: goals_path, method: :get, class: 'text-center mb-3' do %>
    <%= text_field_tag :search, params[:search],
                       placeholder: 'Search...',
                       class: 'input-group-text',
                       style: 'display: inline-block;' %>
    <%= submit_tag 'Search', name: nil,
                   class: 'btn btn-primary mb-1' %>
  <% end %>

</div>

<div class="goals-block">
  <div class="categories-wrapper">
    <div class="new-category">
      <%= link_to 'New', new_category_path, class: 'btn btn-primary btn-sm' %>
      <%= link_to 'Manage', categories_path, class: 'btn btn-primary btn-sm' %>
    </div>
    <div class="divider"></div>

    <div class="categories-title">Categories</div>
    <div class="categories-item all">
      <%= link_to 'All', goals_path %>
    </div>

    <ul class="categories-list">
      <% current_user.categories.each do |category| %>
        <li class="categories-item">
          <%= link_to category.name, goals_path(filter: "#{category.id}") %>
          <span><%= category.goals.count %></span>
        </li>
        <div class="divider"></div>
      <% end %>
    </ul>
  </div>

  <div class="list-wrapper goals">
    <div class="col-sm-12 col-md-4 offset-md-4 box" style="">
      <h2>Goals</h2>
      <ul class="">
        <%= render 'goals' %>
      </ul>
    </div>

    <div class="list-buttons mt-3">
      <%= link_to 'Back to Dashboard', dashboard_path, class: 'btn btn-secondary' %>
      <%= link_to 'Add Goal', new_goal_path(@goal), class: 'btn btn-primary' %>
    </div>
  </div>
</div>

