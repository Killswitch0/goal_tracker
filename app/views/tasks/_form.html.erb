<%= form_with(model: [@goal, @task]) do |f| %>
  <%= render "shared/error_messages", resource: @task %>

  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :complete %>
        <%= f.check_box :complete, {} %>
      </div>

      <%= f.submit "#{@task.new_record? ? 'Create' : 'Update'}", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
