<h1 class="text-center"><%= t('all_tasks') %></h1>

<div class="col-md-6">
  <h2 class="text-center"><%= t('completed') %></h2>

  <div class="" style="border: 1px solid; width: 350px; height: 450px; overflow: scroll; margin: 0 auto;">
    <table class="table table-bordered table-striped text-center">
      <thead class="table-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= sortable 'name' %></th>
        <th scope="col" class="text-center"><%= t('action') %></th>
      </tr>
      </thead>

      <% @completed_tasks.each_with_index do |task, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= link_to task.name.truncate(15), goal_task_path(@goal, task) %></td>
          <td class="text-center"><%= link_to t('delete'), goal_task_path(@goal, task), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="col-md-6">
  <h2 class="text-center"><%= t('uncompleted') %></h2>

  <div class="" style="border: 1px solid; width: 350px; height: 450px; overflow: scroll; margin: 0 auto;">
    <table class="table table-bordered table-striped text-center">
      <thead class="table-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= sortable "name" %></th>
        <th scope="col" class="text-center"><%= t('action') %></th>
      </tr>
      </thead>

      <tbody>
      <% @uncompleted_tasks.each_with_index do |task, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= link_to task.name.truncate(35), goal_task_path(@goal, task) %></td>
          <td class="text-center"><%= link_to t('delete'), goal_task_path(@goal, task), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="text-center">
  <%= link_to t('back_to_goal'), goal_path(@goal), class: "btn btn-secondary" %>
</div>




