<div id="tasks-index">
  <div class="all-items mt-3">
    <div class="row">
      <div class="table-wrapper col-sm-12 col-md-12 col-lg-12">
        <div class="table-header">
          <h2 class="text-center title"><%= t('completed') %></h2>
        </div>

        <div class="table-body">
          <table>
            <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col"><%= sortable 'name' %></th>
              <th scope="col" class="text-center"><%= t('action') %></th>
            </tr>
            </thead>

            <% @completed_tasks.each_with_index do |task, index| %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= link_to task.name.truncate(30), '#', class: 'hover-link' %></td>
                <td class="text-center">
                  <%= link_with_icon 'pencil', edit_goal_task_path(@goal, task), class: 'btn btn-primary btn-sm' %>
                  <%= link_with_icon 'trash', goal_task_path(@goal, task),
                    data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="table-wrapper col-sm-12 col-md-12 col-lg-12">
        <div class="table-header">
          <h2 class="text-center title"><%= t('uncompleted') %></h2>
        </div>

        <div class="table-body">
          <table>
            <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col"><%= sortable "name" %></th>
              <th scope="col" class="text-center"><%= t('action') %></th>
            </tr>
            </thead>

            <tbody>
            <% @uncompleted_tasks.each_with_index do |task, index| %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= link_to task.name.truncate(30), '#', class: 'hover-link' %></td>
                <td class="text-center">
                  <%= link_with_icon 'pencil', edit_goal_task_path(@goal, task), class: 'btn btn-primary btn-sm' %>
                  <%= link_with_icon 'trash', goal_task_path(@goal, task),
                    data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="buttons-list my-3">
    <%= link_to t('back_to_goal'), goal_path(@goal), class: "btn btn-secondary" %>
  </div>
</div>