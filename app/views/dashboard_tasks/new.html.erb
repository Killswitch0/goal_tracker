<div class="container">
  <div class="col-sm-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4 mt-5">
    <%= form_with(model: @task, url: dashboard_tasks_path) do |f| %>
      <%= render "shared/error_messages", resource: @task %>

      <div class="card">
        <div class="table-header">
          <h2 class="text-center"><%= t('new_task') %></h2>
        </div>

        <div class="card-body">

          <div class="mb-3">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :complete %>
            <%= f.check_box :complete, {}, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :goal_id %>
            <%= f.select :goal_id, current_user.goals.all.collect { |c| [c.name, c.id] }, {}, class: 'form-select' %>
          </div>

          <div class="mb-3">
            <%= f.label :deadline %>
            <%= f.date_select :deadline,
                              {
                                prompt: { day: :select_day, month: :select_month, year: :select_year },
                                start_year: Date.current.year
                              },
                              class: "form-select mt-3" %>
          </div>

          <div class="form-buttons">
            <%= link_to t('back_to_dashboard'), dashboard_path, class: 'btn btn-secondary' %>
            <%= f.submit t('create'), class: "btn btn-primary action" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

