<div class="container">
  <div class="col-sm-12 col-md-4 offset-md-4">
    <%= form_with(model: @task, url: dashboard_tasks_path) do |f| %>
      <%= render "shared/error_messages", resource: @task %>

      <div class="card">
        <div class="table-header">
          <h2 class="text-center"><%= t('new_task') %></h2>
        </div>

        <div class="card-body">

          <div class="mb-3">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :complete %>
            <%= f.check_box :complete, {}, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :goal_id %>
            <%= f.select :goal_id, current_user.goals.all.collect { |c| [c.name, c.id] }, {}, class: 'form-select' %>
          </div>

          <div class="mb-3">
            <%= f.label :deadline %>
            <%= f.date_select :deadline, { prompt: { day: 'Select Day', month: 'Select Month', year: 'Select Year' } }, class: "form-select mt-3" %>
          </div>

          <%= f.submit t('create'), class: "btn btn-primary action" %>
        </div>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to t('back_to_dashboard'), dashboard_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>

