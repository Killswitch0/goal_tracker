<%= form_with(model: [@goal, @habit]) do |f| %>
  <%= render "shared/error_messages", resource: @habit %>
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: "mb-1 form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :description %>
        <%= f.text_area :description, class: "mb-1 form-control" %>
      </div>

      <%= f.submit "#{@habit.new_record? ? t('create') : t('update')}", class: "mb-2 btn btn-primary action" %>
<% end %>