<%= form_with(model: user, url: signup_path, local: true) do |f| %>
  <%= render "shared/error_messages", resource: user %>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Example', class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: 'my@mail.com',class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Minimum length is 6 characters', class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, placeholder: 'Minimum length is 6 characters', class: "mb-1 form-control" %>
      </div>

      <% unless user.new_record? %>
        <div class="mb-3">
          <%= f.label :old_password %>
          <%= f.password_field :old_password, class: 'form-control' %>
        </div>
      <% end %>

      <%= f.submit "#{user.new_record? ? 'Create account' : 'Update'}", class: "mb-2 btn btn-primary" %>
    </div>
  </div>
<% end %>
