<% if current_user %>
  <li class="nav-item dropdown">
    <a class="nav-link nav-link-dropdown notifications-dropdown" href="#">
      <span class="badge rounded-pill bg-danger">
        <%= @unread.count >= 9 ? '9+' : @unread.count %> <i class="bi bi-bell"></i>
      </span>
    </a>

    <div class="notifications" id="notifications">
      <header>
        <div class="notif-box">
          <div class="d-flex align-items-center"> <!-- TODO - add style -->
            <h2 class="title"><%= t('notifications.common.notifications') %></h2>
            <span id="notifes"><%= @unread.count %></span>
          </div>

          <p id="mark_all"><%= link_to t('notifications.common.mark_as_read'), mark_notifications_as_read_path %></p> <!-- TODO - check app colors for color matching -->
        </div>
      </header>

      <%= render 'layouts/notifications-list', notifications: @notifications %>
    
      <footer class="mt-4 text-center"> <!-- TODO - add style css -->
        <%= link_with_icon 'chevron-right',  notifications_path(filter: 'all'), 'show-all', id: 'mark_all', class: 'text-decoration-none' %> <!-- TODO - translate link -->
      </footer>
    </div>
  </li>
<% end %>