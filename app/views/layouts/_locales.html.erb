<li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle nav-link-dropdown" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    <%= tag.div '', class: "fflag fflag-#{I18n.locale.upcase} ff-md" %>
    <i class="bi bi-caret-down-fill"></i>
    <%= t I18n.locale %>
  </a>

  <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
    <% I18n.available_locales.each do |locale| %>
      <li>
        <% if I18n.locale == locale %>
          <%= tag.span t(locale), class: 'dropdown-item' %>
        <% else %>
          <%= link_to t(locale), url_for(locale: locale),
                      class: 'dropdown-item' %>
        <% end %>
      </li>
    <% end %>
  </ul>
