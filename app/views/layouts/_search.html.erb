<%= form_with url: path, method: :get, class: 'd-flex justify-content-center mt-3' do |f| %>
  <%= f.text_field :search,
                   placeholder: t('search').concat('...'),
                   class: 'input-group-text',
                   style: 'display: inline-block;' %>

  <%= button_tag class: 'btn btn-primary mx-1 action' do %>
    <%= icon 'search' %>
  <% end %>
<% end %>