<div class="col-sm-12 col-md-4 offset-md-4">
  <%= form_with(url: create_invitation_challenge_path(@challenge), method: :post, class: 'mt-3') do |f| %>
    <%= render "shared/error_messages", resource: @challenge %>

    <div class="card">
      <div class="table-header">
        <h2 class="text-center">
          <%= t('invite_user') %>
        </h2>
      </div>

      <div class="card-body">

        <div class="mb-3">
          <%= f.label :email, t('activerecord.attributes.user.email') %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-buttons">
          <%= link_to t('back'), challenge_path(@challenge), class: 'btn btn-secondary mt-3' %>
          <%= f.submit t('create'), class: "btn btn-primary action mt-3" %>
        </div>
      </div>
    </div>

  <% end %>
</div>