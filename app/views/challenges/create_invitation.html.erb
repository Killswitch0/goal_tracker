<div class="col-sm-12 col-md-4 offset-md-4">
  <h2 class="text-center">Invite user</h2>

  <%= form_with(url: create_invitation_challenge_path(@challenge), method: :post, class: 'mt-3') do |f| %>
    <%= render "shared/error_messages", resource: @challenge %>

    <div class="card">
      <div class="card-body">

        <div class="mb-3">
          <%= f.label :email, 'Email of the user to invite:' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <%= f.submit t('create'), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= link_to t('back'), challenge_path(@challenge), class: 'btn btn-secondary mt-3' %>
</div>