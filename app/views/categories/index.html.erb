<div class="categories-index-wrapper mt-3">
  <div class="actions-items">
    <div class="actions-header">
      <div class="items-title"><%= t('all_categories') %></div>
      <%= link_to t('new_category'), new_category_path,
                  class: 'btn btn-primary btn-sm new-task' %>
    </div>

    <div class="divider"></div>

    <ul class="action-list">
      <% if @categories.present? %>
        <% @categories.each do |category| %>
          <li class="action-item">
            <span class="fw-bold"><%= category.name %></span>
            <div class="">
              <%= link_to t('edit'), edit_category_path(category),
                          class: 'btn btn-primary btn-sm' %>
              <%= link_to t('delete'), category,
                          data: { turbo_method: :delete, turbo_confirm: t('sure') },
                          class: 'btn btn-danger btn-sm' %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= link_to t('back_to_goals'), goals_path, class: 'btn btn-secondary' %>
</div>
