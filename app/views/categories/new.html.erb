<h1 class="text-center">New Category</h1>

<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @category) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "mb-1 form-control" %>

      <%= f.submit "Creat Category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
