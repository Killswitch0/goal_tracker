<h1 class="text-center mt-3">New Category</h1>

<div class="col-md-4 offset-4">
  <%= form_with(model: @category) do |f| %>
    <%= render "shared/error_messages", resource: @category %>

    <div class="card">
      <div class="card-body">

        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <%= f.submit "Creat Category", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back to categories', categories_path, class: 'btn btn-secondary' %>
  </div>
</div>
