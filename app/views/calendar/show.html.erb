<div class="mt-3 text-center">
  <h1>Calendar</h1>

  <%= month_calendar do |date| %>
    <%= date.day %>
    <% habits_for.each do |habit| %>
      <% if habit.completion_dates.any? { |cd| cd.date == date.to_date } %>
        <div class="completed border border-dark"><%= habit.name %></div>
      <% else %>
        <div class="uncompleted border border-dark"><%= habit.name %></div>
      <% end %>
    <% end %>
  <% end %>
</div>
