<div class="col-sm-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4 mt-3">
  <div class="card">
    <div class="table-header">
      <h2 class="text-center"><%= t('password_reset') %></h2>
    </div>

    <div class="card-body">
      <%= form_with url: password_resets_path, method: :post do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div class="actions"><%= f.submit 'Reset Password', class: 'btn btn-primary action' %></div>
      <% end %>
    </div>
  </div>
</div>
