<div class="col-md-4 offset-md-4">
  <h1 class="text-center">Password reset</h1>

  <div class="card">
    <div class="card-body">
      <%= form_with url: password_resets_path, method: :post do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div class="actions"><%= f.submit 'Reset Password', class: 'btn btn-primary' %></div>
      <% end %>
    </div>
  </div>
</div>
